.color-immersion.full-screen.default
  .content
    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      .section
        %h2.thin Forgot your password?
        .helper-text Our auto-emailer is not yet set up, so this functionality is unfortunately not available on the demo.
      = f.error_notification
      .section
        = f.input :email, required: true, autofocus: true, wrapper_html: { class: 'span-12' }
      .section
        .field.span-6
          = f.button :submit, "Reset my password"
    = render "devise/shared/links"
